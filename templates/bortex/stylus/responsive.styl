@media only screen and (min-width:  480px) 
	.list-items
		.item
		li 
			width 33.33%
	.item_text
		&:after
			bottom -15px
			margin-left -16px
			border-left 16px solid transparent
			border-right 16px solid transparent
			border-top 16px solid #fff


	
@media only screen and (min-width:  750px) 
	.header
		#btn_nav
			display none
		#menu
			float right
			margin-right 10em
			margin-top 1.5em
			display block !important
			ul 
				margin 0
				padding 0


				li
					display inline-block
					margin .5em 0 0
					border-top none
					border-left none
					border-right none
					border-bottom 5px solid transparent

					a 
						display block
						font-size 1em
						letter-spacing .2em
						text-decoration none
						color $azul
						text-transform uppercase
						padding-bottom 1.9em
					&:hover
						border-color $verde
		.social
			position absolute
			right 1.5em
			display block !important
	.b2j_contact
		form 
			width 900px 

	.item_header
		.icon-arrow-down
			
			opacity 1



@media only screen and (min-width:  870px) 
	.header
		#menu
			ul 
				li
					margin .5em .5em 0
					

	.list-items
		.item
		li 
			width 25%

			a 
			&:hover 
				.info
					display inline-block
	footer
		.services
			font-size 14px
						
@media only screen and (min-width:  1100px)
	.list-items
		.item
		li 
			
			a 
			.info
				p
					font-size 1em
					display block

@media only screen and (min-width:  1400px)
	.list-items
		.item
		li 
			a 
			.info
				padding: 2em;
					

						